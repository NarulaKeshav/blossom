doctype html
html
    head
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(charset="UTF-8")

        // Favicon and Title
        title#page-title Blossom
        link(rel='shortcut icon', href='logo.png')

        // META TAGS
        meta(property='og:title', content='Blossom')
        meta(property='og:description', content='Blossom is a pomodoro clock application that helps you manage time, by allowing you to work for 25 minutes, followed by a 5 minutes of break time. You can also set work and break time accordingly and alarm will ring when time is over.')
        meta(property='og:site_name', content='NarulaKeshav')
        meta(property='og:url', content='http://narulakeshav.com/app/blossom')
        meta(property='og:image', content='http://i.imgur.com/bEPZ8MB.jpg')

        // TWITTER CARD META TAGS
        meta(name="twitter:card", content="summary_large_image")
        meta(name="twitter:site", content="@NarulaKeshav")
        meta(name="twitter:creator", content="@NarulaKeshav")
        meta(name="twitter:title", content="Blossom")
        meta(name="twitter:description", content="Blossom is a pomodoro clock application that helps you manage time, by allowing you to work for 25 minutes, followed by a 5 minutes of break time. You can also set work and break time accordingly and alarm will ring when time is over.")
        meta(name="twitter:image" content="http://i.imgur.com/bEPZ8MB.jpg")

        // CSS CDNs
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.1/animate.min.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')

        // MY CSS FILE
        link(rel='stylesheet', href='scss/design.css', media="all")
    body
        img.logo.img-responsive(src="pic.png")
        .progress
            .progress-bar(role='progressbar', id="timer-bar", aria-valuemin='0', aria-valuemax='100', style='width: 0%;')
        .col-md-12
            .col-md-12(align="center")
                button#reset
                    span.fa.fa-repeat
            .col-md-8.col-md-offset-2
                p#main-time 25:00
                    span#ms 00
                .col-md-8.col-md-offset-2
                    .col-xs-6(align="right")
                        p.work-for Work For
                        input.key-button(id="work", type="number", maxlength="2", placeholder="25", min="1", max="60")
                        p.work-for Mins
                    .col-xs-6(align="left")
                        p.work-for Break For
                        input.key-button(id="break", type="number", maxlength="2", placeholder="5", min="1", max="60")
                        p.work-for Mins
                .col-md-8.col-md-offset-2(align="center")
                        button.btn-start.wow.fadeInUp(id="start-stop") 
                            span#btn-text start
                        button.btn-restart#restart Restart
                        audio(id="audio", src="alarm.mp3")
        a.btn-repo(href="https://github.com/NarulaKeshav/blossom", target="_blank")
            span.fa.fa-github.fa-lg &nbsp; 
            |  Repository


    // JAVASCRIPT CDNs
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js')

    // MY JAVSCRIPT FILE
    script(src='js/timer.js')
